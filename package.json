{
  "name": "@annadata/capacitor-mqtt-quic",
  "version": "0.2.0",
  "type": "module",
  "description": "MQTT-over-QUIC client for Capacitor (iOS, Android, Web). Native: ngtcp2+WolfSSL; Web: MQTT over WebSocket (WSS), same API.",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "dist",
    "ios",
    "android",
    "Package.swift",
    "AnnadataCapacitorMqttQuic.podspec",
    "README.md",
    "deps-versions.sh",
    "build-native.sh",
    "docs"
  ],
  "scripts": {
    "build": "npm run build:tsc && npm run build:rollup",
    "build:tsc": "npx tsc",
    "build:rollup": "npx rollup -c rollup.config.js",
    "build:android-prebuilts": "./build-native.sh --android-only --abi arm64-v8a && ./build-native.sh --android-only --abi armeabi-v7a && ./build-native.sh --android-only --abi x86_64",
    "watch": "rollup -c rollup.config.js -w",
    "lint": "eslint src --ext ts",
    "prepack": "npm run clean:build-artifacts",
    "prepublishOnly": "npm run build && npm run clean:build-artifacts",
    "clean:build-artifacts": "node -e \"const fs=require('fs'),path=require('path');['android/build','android/.gradle','ios/build','ios/install'].forEach(d=>{const p=path.join(__dirname,d);if(fs.existsSync(p)){console.log('Removing:',p);require('child_process').execSync('rm -rf '+p,{stdio:'inherit'})}})\""
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "web",
    "browser",
    "pwa",
    "mqtt",
    "quic",
    "ngtcp2",
    "websocket"
  ],
  "capacitor": {
    "ios": {
      "src": "ios",
      "name": "AnnadataCapacitorMqttQuic"
    },
    "android": {
      "src": "android"
    },
    "web": {
      "bundled": true
    }
  },
  "devDependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/ios": "^8.0.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@types/node": "^22.10.0",
    "eslint": "^9.20.1",
    "rollup": "^4.28.1",
    "typescript": "~5.6.0"
  },
  "dependencies": {
    "mqtt": "^5.3.0",
    "mqtt-packet": "^9.0.2"
  },
  "peerDependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/ios": "^8.0.0"
  },
  "author": "Mr. Yakub Mohammad <yakub@annadata.ai>",
  "engines": {
    "node": ">=18"
  },
  "license": "MIT"
}
